<ul id="lists">
  <% sort_lists(@lists) do |list, index| %>
    <li class="<%= list_class(list[:todos]) %>">
      <a href="/lists/<%= index %>">
        <h2><%= list[:name] %></h2>
        <p><%= count_unchecked(list[:todos]) %> / <%= list[:todos].length %></p>
      </a>
    </li>
  <% end %>
</ul>

<% content_for :header_links do %>
  <a class="add" href="/lists/new">Add New List</a>
<% end %>